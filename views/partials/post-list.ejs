<% if(posts && posts.length) { %>
  <% _.each(posts, function(post) { %>
    <div class="post-preview">
      <a href="/post/<%= post.slug %>">
        <h2 class="post-title">
          <%= post.title %>
        </h2>
        <h3 class="post-subtitle">
          <%= post.subtitle %>
        </h3>
      </a>
      <p class="post-meta">Posted by <%= post.author %> on <%= moment(post.updatedAt).format('MMMM D, YYYY') %></p>
    </div>
    <hr>
  <% }) %>
<% } %>  