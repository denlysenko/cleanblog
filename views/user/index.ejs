<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Username</th>
			<th>Online</th>
			<th>Status</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% if(users && users.length) { %>
		<% _.each(users, function(user) { %>
			<tr data-user-id="<%= user.id %>">
				<td><%= user.username %></td>
				<td style="text-align:center;" class="status">
					<% if(user.online) { %>
						<i class="glyphicon glyphicon-ok"></i>
					<% } else { %>
						<i class="glyphicon glyphicon-remove"></i>	
					<% } %>	
				</td>
				<td style="text-align:center;">
					<% if(user.admin) { %>
						<i class="glyphicon glyphicon-king"></i>
					<% } else { %>
						<i class="glyphicon glyphicon-pawn"></i>	
					<% } %>	
				</td>
				<td>
					<a href="/user/edit/<%= user.id %>" class="btn btn-xs btn-warning" role="button">Edit</a>
					<a href="/user/destroy/<%= user.id %>" class="btn btn-xs btn-danger" role="button" data-action="remove">Delete</a>
				</td>
			</tr>
		<% })} %>	
	</tbody>
</table>
<a href="/user/new" class="btn btn-primary" role="button" data-action="add">Add New User</a>